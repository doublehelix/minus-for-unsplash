{
  "manifest_version": 2,
  "name": "Unsplash Minus · Hide Unsplash+",
  "short_name": "Unsplash Minus",
  "version": "1.0",
  "description": "Unsplash Minus is a simple addon that lets you hide the Unsplash+ content from Unsplash.",
  "author": "Tahoe Beetschen",

  "content_scripts": [
    {
      "matches": ["https://unsplash.com/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],

  "icons": {
   "512": "icon.png"
  },

  "permissions": [
    "storage"
  ],

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "title": "Unsplash Minus"
  }
}